<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title" style="text-transform: uppercase;"><strong><%= @article.title%></strong></span>
        <p>
          <%= @article.text%>
        </p>
      </div>
    </div>
  </div>
</div>

<h2>Comments</h2>
<% if @article.comments.size == 0%>
  <p>No comments in this article</p>
<%else %>
<%= render @article.comments %>
<%end %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<br>

<%= link_to 'Edit', edit_article_path(@article) , class: "btn"%>
<%= link_to 'Back', articles_path, class: "btn"%>
