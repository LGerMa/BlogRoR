<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path, class:"btn"%>
<table class="highlight centered">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% if @article.size == 0%>
    <tr>
      <td colspan="2">
        No articles found
      </td>
    </tr>
  <% else %>
    <% @article.each do  |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class:"btn"%></td>
        <td><%= link_to 'Edit', edit_article_path(article), class:"btn"%></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:"btn red"%></td>
      </tr>
    <% end %>
  <% end %>
</table>
